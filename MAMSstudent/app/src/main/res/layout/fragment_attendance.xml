<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="apex.mams.student.AttendanceFragment">

    <LinearLayout
        android:background="@drawable/btn_background"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:layout_weight="0.4"
            android:hint="From"
            android:focusable="false"
            android:id="@+id/edt_fromDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingVertical="8dp"
            android:layout_weight="0.6"
            android:src="@drawable/exchange"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <EditText
            android:drawableLeft="@drawable/ic_date_range_black_24dp"
            android:layout_weight="0.4"
            android:hint="To"
            android:focusable="false"
            android:id="@+id/edt_toDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Spinner
        android:id="@+id/spin_sub_forAttendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </Spinner>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:textColor="#000000"
            android:id="@+id/txt_attendanceCounter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="00/00"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:visibility="gone"
            android:textColor="#000000"
            android:id="@+id/txt_nodata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NO DATA FOUND"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:visibility="gone"
            android:textColor="#000000"
            android:id="@+id/txt_attendancePercentage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="00%"
            android:textAlignment="center"
            android:textSize="20dp" />

    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/ln_attendancetable"
        android:layout_marginTop="7dp"
        android:background="@drawable/btn_background"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="Sr. no"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Attendance"
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_attendance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>