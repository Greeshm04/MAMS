<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:ndroid="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="10dp">


    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.6"
                    android:paddingTop="15dp"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:elevation="12dp"
                        android:id="@+id/view2"
                        app:cardCornerRadius="40dp"
                        android:layout_centerHorizontal="true"
                        android:innerRadius="0dp"
                        android:shape="ring"
                        android:layout_gravity="center"
                        android:thicknessRatio="1.9"
                        >

                        <ImageView
                            android:id="@+id/img_profile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/login"
                            />

                    </android.support.v7.widget.CardView>
                    <TextView
                        android:paddingTop="5dp"

                        android:paddingLeft="5dp"
                        android:gravity="center"
                        android:id="@+id/txt_studentEnRoll"
                        android:text="156470307063"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_weight="0.4">

                    <CheckBox
                        android:id="@+id/cbforstud"
                        android:layout_gravity="end"
                        android:layout_alignParentLeft="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />




                    <TextView
                        android:layout_marginTop="19dp"
                        android:id="@+id/txt_studentSem"
                        android:text="Sem = 5th"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_studentName"
                        android:text="Umang zala"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/txt_studentMobNo"
                        android:text="+919033169495"
                        android:gravity="center"
                        android:textColor="#000000"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/txt_studentEmailId"
                        android:text="umang@gmail.com"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="11dp" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ln"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="vertical">
                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"/>

                <LinearLayout
                    android:paddingTop="8dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Of Joining"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_weight="0.3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_weight="0.4"/>
                    <TextView
                        android:id="@+id/txt_studentDoj"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="08/04/2000"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_weight="0.3"/>


                </LinearLayout>

                <LinearLayout
                    android:paddingTop="8dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Of Leaving"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:gravity="center"
                        android:layout_weight="0.3"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_weight="0.4"/>

                    <TextView
                        android:id="@+id/txt_studentDol"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="01/06/2015"
                        android:gravity="center"
                        android:layout_weight="0.3"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingLeft="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date Of Birth"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_weight="0.3"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=":"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_weight="0.4"/>

                    <TextView
                        android:id="@+id/txt_studentDob"
                        android:layout_width="match_parent"
                        android:textColor="#000000"
                        android:layout_height="wrap_content"
                        android:text="02/06/2000"
                        android:layout_weight="0.3"
                        android:gravity="center"/>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"

                    />

                <TextView
                    android:id="@+id/txt_studentAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"

                    />

            </LinearLayout>
            <ImageView
                android:id="@+id/btn_drop"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:scaleX="1.5"
                android:scaleY="1"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:tag="down" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
