<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="apex.mams.admin.DashBoardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:paddingLeft="13dp">

        <android.support.v7.widget.CardView
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.1"
            app:cardBackgroundColor="#fff176"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true">

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="Faculties" />

        <android.support.v7.widget.CardView
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_marginTop="1dp"
            android:layout_weight="0.1"
            app:cardBackgroundColor="#aed581"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true">

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="Students" />

        <android.support.v7.widget.CardView
            android:layout_width="25dp"
            android:layout_height="28dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.1"
            app:cardBackgroundColor="#90caf9"
            app:cardCornerRadius="3dp"
            app:cardUseCompatPadding="true">

        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:text="Both" />
    </LinearLayout>


    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/SwipeContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_nodata"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="NO DATA AVAILABLE"
                android:textAlignment="center" />
            <!--<ListView-->
            <!--android:id="@+id/list_notice"-->
            <!--android:longClickable="true"-->
            <!--android:divider="@null"-->
            <!--android:dividerHeight="0dp"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"/>-->

            <com.baoyz.swipemenulistview.SwipeMenuListView
                android:id="@+id/list_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@null"
                android:dividerHeight="0dp" />


            <!--<Button-->
            <!--android:id="@+id/btn_add_faculty"-->
            <!--android:text="add new"-->
            <!--android:layout_gravity="bottom|end"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->
            <!--<include layout="@layout/content_admin_dashboard"/>-->
        </FrameLayout>

    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
